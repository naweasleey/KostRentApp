@model List<DataKost>

@{
    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3>Daftar Kost - Laluna Kost</h3>
            </div>

            <div class="card-body">
                <a href="/Kost/Create" class="btn btn-success">Add Kost</a>

                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Nama</th>
                            <th>Alamat</th>
                            <th>Harga Per Bulan</th>
                            <th>Gambar</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var kost in Model)
                        {
                            <tr>
                                <td>@kost.Name</td>
                                <td>@kost.Address</td>
                                <td>@kost.Price</td>
                                <td>@kost.Photo</td>
                                <td>@kost.Stat.Stat</td>
                                <td>
                                    <a href="/Kost/Edit/@kost.Id" class="btn btn-warning">Edit</a>
                                    <a href="/Kost/Delete/@kost.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


